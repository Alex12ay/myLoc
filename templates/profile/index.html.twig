{% extends 'base.html.twig' %}

{% block title %}Profil -myLoc{% endblock %}

{% block body %}
    <h1 class="text-center mt-2">{{app.user.username}}</h1>
    <div class="container">
         <div class="row justify-content-center">
        {% for objet in objets %}
            <div class="card m-2" style="width: 18rem;">
                <img src="uploads/{{ objet.thumbnail }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ objet.name }}</h5>
                    <p class="card-text">{{objet.description}}</p>
                    <p class="card-text">{{objet.owner.username}}</p>
                       {% for emprunt in objet.emprunts %}
                            {% if date >= emprunt.DateStart|date('d/m/Y') and date <= emprunt.DateEnd|date('d/m/Y') %}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-circle-fill mt-2" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8"/>
                                    </svg>
                                    <p>Jusqu'au:{{emprunt.DateEnd|date('d/m/Y')}}</p>
                                    {% else %}
                                        {% if date < emprunt.DateStart|date('d/m/Y') %}
                                        <p>Pret Pr√©vu le {{emprunt.DateStart|date('d/m/Y')}}</p>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-circle-fill mt-2" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="8"/>
                                        </svg>             
                            {% else %}
                                Disponible
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-circle-fill mt-2" viewBox="0 0 16 16">
                                <circle cx="8" cy="8" r="8"/>
                                </svg>
                            {% endif %}
                            {% endif %}
                        {% endfor %}
                    <a href="/objets/show/{{ objet.id }}" class="btn btn-primary">Voir Plus</a>
                </div>
            </div>

        {% endfor %}
    </div>

        <!--
        *nb point
        *bouton formulaire ajjouter en pret
        *suivi des prets en cours(nomEmprunteur, date debut/date fin)
        -->
    </div>
{% endblock %}
