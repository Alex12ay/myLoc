{% extends 'base.html.twig' %}

{% block title %}MyLoc{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Bienvenue MyLoc</h1>
    {% if app.user %}
        bonjour {{app.user.username}}!
        <a href='/logout' class="btn btn-warning">Deconnexion</a>
    {% else %}
        bonjour invit√©!
        <a href='/login' class="btn btn-warning">Connexion</a>
    {% endif %}
    {% for objet in objets %}
        <div class="card" style="width: 18rem;">
            <img src="{{ objet.thumbnail }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ objet.name }}</h5>
                <p class="card-text">{{objet.description}}</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
        {% endfor %}
{% endblock %}
